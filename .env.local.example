# Database (Supabase — use the pooled "Transaction" connection string, port 6543)
DATABASE_URL="postgresql://postgres.xxxx:password@aws-0-eu-west-2.pooler.supabase.com:6543/postgres"

# NextAuth
AUTH_SECRET="generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"

# Google OAuth (optional — skip for now, magic link works without it)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Email (Resend) — used for magic link sign-in
RESEND_API_KEY=""
EMAIL_FROM="Ship My Dissertation <noreply@shipmydiss.com>"

# AI — OpenRouter (openrouter.ai)
OPENROUTER_API_KEY=""
# Model to use — any model on OpenRouter. Defaults to anthropic/claude-sonnet-4-5
# OPENROUTER_MODEL="anthropic/claude-sonnet-4-5"

# Stripe (not needed until payments are built)
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
STRIPE_PRICE_MONTHLY=""
STRIPE_PRICE_ANNUAL=""

# Feature flags
# Set to "true" to show "Free during beta" landing page. Set to "false" (or remove) for paid pricing.
NEXT_PUBLIC_BETA_MODE="true"

# Admin panel — completely separate from user auth
# Generate ADMIN_SECRET with: openssl rand -hex 32
ADMIN_PASSWORD="choose-a-strong-password"
ADMIN_SECRET="generate-with-openssl-rand-hex-32"
