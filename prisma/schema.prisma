generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ─── NextAuth Models ───────────────────────────────────────────────

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ─── App Models ────────────────────────────────────────────────────

model User {
  id                 String    @id @default(cuid())
  name               String?
  email              String?   @unique
  emailVerified      DateTime?
  image              String?
  stripeCustomerId   String?   @unique
  subscriptionStatus String?   @default("free") // free | active | cancelled | past_due
  createdAt          DateTime  @default(now())

  accounts Account[]
  sessions Session[]
  projects Project[]
}

model Project {
  id                   String   @id @default(cuid())
  userId               String
  title                String
  type                 String   // dissertation | assignment | project
  wordCount            Int
  deadline             DateTime
  weeklyHoursAvailable Int      @default(10)
  methodology          String?  // qualitative | quantitative | mixed | literature_based | not_sure
  currentPhase         String?  // lit_review | methodology | data_collection | analysis | drafting | editing | submission
  currentProgress      String?  @default("not_started") // not_started | chosen_topic | started_reading | have_proposal | collecting_data
  blockedWeeks         Json?    // array of date ranges when student can't work
  otherDeadlines       Json?    // array of { date, description }
  documentAnalysis     Json?    // structured AI analysis of uploaded brief/spec
  documentFileName     String?  // original file name for UI display
  documentAnalysedAt   DateTime? // when the document was analysed
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  user              User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  milestones        Milestone[]
  checkIns          CheckIn[]
  aiInteractionLogs AIInteractionLog[]
}

model Milestone {
  id            String    @id @default(cuid())
  projectId     String
  title         String
  description   String?   @db.Text
  phase         String    // lit_review | methodology | data_collection | analysis | drafting | editing | submission
  targetDate    DateTime
  completedDate DateTime?
  status        String    @default("upcoming") // upcoming | in_progress | completed | overdue | adjusted
  estimatedHours Int?
  deliverable   String?   @db.Text
  dependencies  Json?     // array of milestone IDs
  order         Int

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model CheckIn {
  id              String   @id @default(cuid())
  projectId       String
  weekNumber      Int
  status          String   @default("pending") // pending | completed | skipped
  completedTasks  Json?    // array of task IDs/descriptions
  blockers        String?  @db.Text
  moodRating      Int?     // 1-5
  aiResponse      String?  @db.Text
  planAdjustments Json?    // any changes made to milestones
  createdAt       DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model AIInteractionLog {
  id              String   @id @default(cuid())
  projectId       String
  interactionType String   // plan_generation | checkin | plan_adjustment
  userInput       String?  @db.Text
  aiOutput        String?  @db.Text
  createdAt       DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}
